--GIT
-INSTALL
sudo apt install git -y
-SETUP
git config --global user.name "Žygimantas Bagdzevičius"
git config --global user.email "zbagdzevicius@gmail.com"
ssh-keygen

--SNAP
sudo apt install snapd -y

--SETUP DOCKER REGISTRY
docker login
cat ~/.docker/config.json
-CREATE CREDENTIALS FOR DOCKER IMAGES
kubectl create secret generic regcred \
    --from-file=.dockerconfigjson=~/cronicler-kubernetes/gitlab-docker-registry-config.json \
    --type=kubernetes.io/dockerconfigjson
